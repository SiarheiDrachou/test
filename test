                                    writer.write(String.valueOf(" secondname: " + secondname3));
                                    writer.write(String.valueOf(" email: " + email3));
                                    writer.write(String.valueOf(" roles: " + roles3));
                                    writer.write(String.valueOf(" phonenumber: " + phone3));
                                    writer.write(String.valueOf("\n"));
                                    }
                                else if (numas == 3) {
                                    firstname3.remove(0);
                                    secondname3.remove(0);
                                    email3.remove(0);
                                    roles3.remove(0);
                                    phone3.remove(0);
                                    writer.write(String.valueOf("user:"+1+" firstname: " + firstname1));
                                    writer.write(String.valueOf(" secondname: " + secondname1));
                                    writer.write(String.valueOf(" email: " + email1));
                                    writer.write(String.valueOf(" roles: " + roles1));
                                    writer.write(String.valueOf(" phonenumber: " + phone1));
                                    writer.write(String.valueOf("\n"));
                                    writer.write(String.valueOf("user:"+2+" firstname: " + firstname2));
                                    writer.write(String.valueOf(" secondname: " + secondname2));
                                    writer.write(String.valueOf(" email: " + email2));
                                    writer.write(String.valueOf(" roles: " + roles2));
                                    writer.write(String.valueOf(" phonenumber: " + phone2));
                                    writer.write(String.valueOf("\n"));
                                }
                            } catch(IOException ex){

                                System.out.println(ex.getMessage());
                            }
                            break;
                        case 4:
                            try(FileReader reader = new FileReader("notes3.txt"))
                            {

                                char[] buf = new char[256];
                                int c;
                                while((c = reader.read(buf))>0){

                                    if(c < 256){
                                        buf = Arrays.copyOf(buf, c);
                                    }
                                    System.out.print(buf);
                                }
                            }
                            catch(IOException ex){

                                System.out.println(ex.getMessage());
                            }

                    break;
                    }
                }
                System.out.println("До свидания!");

            }
        }













